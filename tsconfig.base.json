{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "noUnusedLocals": true,
        "sourceMap": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "moduleResolution": "node",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "dist",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@glimmer/types": ["./libs/types/src/index.ts"],
            "@glimmer/constants": ["./libs/constants/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
